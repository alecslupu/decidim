<%
edit_link(
  resource_locator(current_participatory_space).edit,
  :update,
  :voting,
  voting: current_participatory_space
)
%>

<% Decidim::ContentBlock.published.for_scope(:voting_landing_page, organization: current_organization).where(scoped_resource_id: current_participatory_space.id).each do |content_block| %>
  <% next unless content_block.manifest %>
  <% next if content_block.manifest.name == :header %>
    <div class="row column">
      <%= cell content_block.manifest.cell, content_block %>
    </div>
<% end %>
